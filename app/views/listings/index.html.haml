%section.search-form
  .container
    .row
      .col-md-12
        #adv-search.input-group
          %form{action: listings_path}>
            %input.form-control{:placeholder => "What are you looking for?", :type => "text", name: "search", value: @search}/
            .input-group-btn
              .btn-group{:role => "group"}
                %button.btn.btn-search{:type => "button"}
                  %span.glyphicon.glyphicon-search{"aria-hidden" => "true"}

  .container.recent-ads
    .row
      .col-md-8.scrollit
        .row.text-center
        - @listings.each do |listing|

          .col-md-4.col-xl-4.col-xs-12.col-sm-6.hero-feature
            .thumbnail
              - if listing.has_image?
                = image_tag(listing.main_image_path, class: "img-responsive", height: "500px")
              - else
                = image_tag(image_path(listing.main_image_path), class: "img-responsive", height: "500px")
              .caption
                %h3 TITLE
  .col-md-4.fixed
    #googleMap{style: "width:100%;height:600px;"}

=content_for :javascript do
  = javascript_include_tag 'listings.js'

