      .col-sm-9.col-md-9
        .well.listings
          .container
            .row
              .col-lg-12
                %h1.page-header
                  Listings
                  /%small Secondary Text
            - @listings.each do |listing|
              .row
                .col-md-7
                  - if listing.has_image?
                    = image_tag(listing.main_image_path, class: "img-responsive", height: "500px")
                  - else
                    = image_tag(image_path(listing.main_image_path), class: "img-responsive", height: "500px")
                .col-md-5
                  %h3
                    = listing.subject
                  %h4
                  %p
                    = listing.body
                  %a.btn.btn-edswap{:href => listing_path(listing.id)}
                    View Listing
                    %span.glyphicon.glyphicon-chevron-right
              %hr/
