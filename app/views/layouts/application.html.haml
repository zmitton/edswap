!!! 5
%html
%head
  %title edSwap

  = stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %meta{name: "viewport", content: "width=device-width, initial-scale=1.0, maximum-scale=1.0"}
  = csrf_meta_tags

%body
  %nav.navbar.nav-pills
    .container
      .navbar-logo
      %a{href: "/listings"}
        =image_tag "edswap-logo.png", :height => "50"
        - if current_user
          Hi #{current_user.nickname}
      %ul.nav.navbar-nav.navbar-right
        / %li= link_to "Forums"
        %li= link_to "Mission", mission_path
        - if current_user
          %li= link_to "+ New Listing", new_listing_path
          %li= link_to "My Account", user_path(session[:user_id])
          %li= link_to "Sign out", signout_path, id: "sign_out"
        - else
          %li= link_to "+ New Listing", login_path(destination_uri: new_listing_path)
          %li= link_to "Login / Sign up", login_path
  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert alert-info"
    = yield
%footer
  .row
    .col-md-12
    %ul.list-inline.social-buttons.text-right
      %li
        %a{:href => "https://twitter.com/edswap"}
          %i.fa.fa-twitter
      %li
        %a{:href => "https://www.facebook.com/EdSwap-1674834089452380/?fref=ts"}
          %i.fa.fa-facebook
      %li
        %a{:href => "mailto:info@edswap.org?Subject=Edswap%20Question"}
          %i.fa.fa-envelope
      %li Copyright &copy; edSwap 2015
